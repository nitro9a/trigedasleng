#windows

WindowManager:
    transition: NoTransition()
    WordADay:
    UnreadWords:
    ReadWords:
    Favorites:
    Pronunciation:

<WordADay>:
    name: "word"
    get: get
    translation: translation

    BoxLayout:
        spacing: 10
        padding: 10
        orientation: "vertical"
        rows: 4
        cols: 1

        GridLayout:
            cols: 4
            rows: 1
            spacing: 0
            size_hint_y: 10

            ScaleButton:
                id: page1
                text: "Words"
                background_color: black
                color: white
                on_press:
                    app.root.current = "word"

            ScaleButton:
                id: page2
                text: "Unread"
                on_press:
                    app.root.current = "unread"

            ScaleButton:
                id: page3
                text: "Read"
                on_press:
                    app.root.current = "read"

            ScaleButton:
                id: page4
                text: "Favorites"
                on_press:
                    app.root.current = "favorites"

        GridLayout:
            cols: 1
            rows: 1
            spacing: 10
            size_hint_y: 10

            ScaleButton:
                id: get
                text: "Get a Word or Phrase"
                pos_hint: {'top': .85, 'center_x': .5}
                on_press:
                    root.random_word()
                    root.ids.btn.text = "Add to favorites?"
                    root.ids.btn.disabled = False
                    root.ids.btn.background_color = red
                on_release:
                    root.ids.translation.scroll_y = 1
                    app.root.get_screen('unread').display_database()
                    app.root.get_screen('read').display_database()

        GridLayout:
            cols: 1
            rows: 1
            spacing: 10
            size_hint_y: 70
            padding: 20

            ScrollableLabel:
                id: translation
                text: ''
                fsize: 100
                bar_width: 10
                bar_color: red
                bar_inactive_color: black
                scroll_type: ['content']

        GridLayout:
            cols: 1
            rows: 1
            spacing: 10
            size_hint_y: 10

            GridLayout:
                orientation: 'horizontal'
                cols: 1
                rows: 2
                spacing: 10
                size_hint_y: 10

                ScaleButton:
                    id: btn
                    text: ""
                    disabled: True
                    color: black
                    background_color: black
                    valign: 'middle'
                    halign: 'center'
                    on_press: root.add_to_favorites()
                    on_release: app.root.get_screen('favorites').display_database()

                ScaleButton:
                    id: pro
                    text: "Pronunciation Guide"
                    color: black
                    background_color: red
                    valign: 'middle'
                    halign: 'center'
                    on_press: app.root.current = "pronunciation"
